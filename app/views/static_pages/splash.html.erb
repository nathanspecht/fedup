<div class="splash">
  <div class="welcome">
      <h1> Welcome to your work newsfeed </h1>
    <div class="tagline">
      <h2> A single place to easily read all of your favorite blogs and publications </h2>
    </div>
  </div>
  <div class="sign-up" onclick="newUser()">
    <h3>Get Started</h3>
  </div>
  <div class="sign-up guest">
    <h3 onclick="newGuestUser()">Guest Login</h3>
  </div>
  <br>
  <div class="login" onclick="newSession()">
    <h3>Login</h3>
  </div>
</div>

<script type="text/javascript">
  var newUser = function() {
    window.location.href = "users/new"
  };

  var newSession = function() {
    window.location.href = "session/new"
  }

  var newGuestUser = function() {
    $.ajax({
      url: "/guest_sign_in",
      type: "get",
      dataType: "json",
      success: function() {
        window.location.href = "/#/explore"
      }
    });
  }
</script>
